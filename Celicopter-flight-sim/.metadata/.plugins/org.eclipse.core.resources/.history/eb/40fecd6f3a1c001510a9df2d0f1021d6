
public class SumOfSines {
	double[] apmlidutes;
	double[] frequencies;
	double[] phaseOffset;
	
	public SumOfSines(){
		apmlidutes=new double[1];
		apmlidutes[0]=1;
		frequencies=new double[1];
		frequencies[0]=1;
		phaseOffset=new double[1];
		phaseOffset[0]=0;
	}
	
	public SumOfSines(double[] a,double[]f,double[] p){
		if(a.length==f.length && a.length==p.length){
			apmlidutes=a;
			frequencies=f;
			phaseOffset=p;
		}
		else {
			System.err.println("Error-array dimentions do not agree");
			apmlidutes=new double[1];
			apmlidutes[0]=1;
			frequencies=new double[1];
			frequencies[0]=1;
			phaseOffset=new double[1];
			phaseOffset[0]=0;
		}
	}
	
	public double evaluate(long time){
		double r=0;
	}
}
